<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
  	<withJansi>true</withJansi>
    <encoder>
        <pattern>%highlight(%-5level) %d{ISO8601} %c: %m%n</pattern>
    </encoder>
    <target>System.out</target>
  </appender>
  <root level="debug">
    <appender-ref ref="console" />
  </root>
</configuration>